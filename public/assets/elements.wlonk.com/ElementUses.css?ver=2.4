div.key-box {
	display: block;
	margin: 0 auto;
	width: 80%;
	text-align: left;
	padding: 0.2em 1em 0.2em 1em;
	background-color: #f4f4f4;
}
.key-name {
	font-size: medium;
	font-weight: bold;
}
.key-desc {
	font-size: smaller;
	font-weight: normal;
}
summary {
	outline:none;
	cursor: pointer;
}
table.table-elements-uses {
	border-collapse: collapse;
	border-width: medium;
	border-style: solid;
	border-color: white;
	background-color: white;
}
table.table-elements-uses th,td {
	text-align: left;
	vertical-align: top;
	padding: 0.1em;
	border-width: medium;
	border-style: solid;
	border-color: white;
}
table.table-elements-uses td.col1 {
	text-align: center;
    border-right-style: none;
}
table.table-elements-uses td.col2 {
	text-align: left;
	border-left-style: none;
}
.num {
	font-size: larger;
	font-weight: normal;
}
.sym {
	font-size: larger;
	font-weight: bold;
}
.name {
	font-size: larger;
}
.desc {
	font-size: medium;
}
.uses {
	font-size: medium;
}
.note {
	font-style: italic;
}
.alt-name {
	font-size: smaller;
}
.latin-name {
	font-style: italic;
	font-size: smaller;
}
img.spkr {
	cursor: pointer;
    width: 16px;
	height: 16px;
}

